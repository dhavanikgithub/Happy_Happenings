<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/rlmain"
        android:layout_width="fill_parent"
        android:layout_height="280dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/teal_700"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            style="@style/bold_20_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/custom_add_event_name"
            style="@style/medium_18_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Event Name" />

        <EditText
            android:id="@+id/custom_add_event_date"
            style="@style/medium_18_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/calendar"
            android:editable="false"
            android:hint="Event Date" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/custom_add_event_submit"
                style="@style/bold_20_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="Submit" />

            <Button
                android:id="@+id/custom_add_event_cancel"
                style="@style/bold_20_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="Cancel" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>